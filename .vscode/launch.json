  "version": "0.2.0",
  "configurations": [
    {
      "name": "STM32F429 Debug (ST-Link)",
      "cwd": "${workspaceFolder}",
      "executable": "${workspaceFolder}/build/STM32_F429ZI_Template",
      "request": "launch",
      "type": "cortex-debug",
      "servertype": "openocd",
      "device": "STM32F429ZI",
      "interface": "swd",
      "runToEntryPoint": "SystemInit",
      "preLaunchTask": "STM32 Build (Debug)",
      "svdFile": "${env:STM32_CUBE_F4}/Repository/STM32Cube_FW_F4_V1.27.1/CPU/SVD/STM32F429.svd",
      "configFiles": ["interface/stlink.cfg", "target/stm32f4x.cfg"],
      "openOCDLaunchCommands": ["transport select hla_swd"],
      "postRestartCommands": ["break main", "continue"],
      "showDevDebugOutput": "parsed"
    }
  ]
}
