{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "STM32 Build (Debug)",
      "type": "shell",
      "command": "cmake --build build --config Debug",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
